@{
    //Load file Layout.cshtml
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";

}

@using project.Models
@using lab1.Models
@functions {
    public MyDbContext db = new MyDbContext();
   

}


<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8">
                <div class="card" style="padding:20px;">
                    <div class="card-header">
                        <h4 class="card-title">Blog Control</h4>
                    </div>
                    <div class="card-body">
                        <form method="post" enctype="multipart/form-data" action="@ViewBag.action">


                            <div class="row" style="margin-top:5px;">
                                <div class="col-md-3 px-1">
                                    <div class="form-group">
                                        <label>Title</label>
                                        <input type="text" value="@if(Model != null){
                                        <text>@Model.Title</text>}" name="title" class="form-control" required>
                                    </div>
                                </div>
                                <div class="col-md-4 pl-1">
                                    <div class="form-group">
                                        <label>Topic</label>
                                        <input type="text" value="@if(Model!=null){
                                        <text>@Model.Topic</text>}else{
                                        <text>0</text>}" name="topic" class="form-control" required>
                                    </div>
                                </div>
                            </div>

                            <div class="row" style="margin-top:5px;">
                                <div class="col-md-7 px-1">
                                    <label>Photo</label>
                                    <div class="form-group">
                                        <input type="file" name="photo" class="form-control">
                                    </div>
                                </div>
                            </div>    
                            

                            <div class="row" style="margin-top:5px;">
                                <div class="col-md-3 px-1">
                                    <div class="form-group">
                                        <label>Author</label>
                                        <input type="text" value="@if(Model != null){
                                        <text>@Model.Author</text>}" name="author" class="form-control" required>
                                    </div>
                                </div>
                                <div class="col-md-1 pl-1"></div>
                                @*<div class="col-md-4 pl-1">
                                    <label>Hot</label>
                                    <div class="form-group">
                                        <input type="checkbox" name="hot" id="hot" @if(Model != null && Model.Hot == 1){
                                        <text>checked</text>}>  <label for="hot">Hot</label>
                                    </div>
                                </div>*@
                            </div>

                            <div class="row" style="margin-top:5px;">
                                <div class="col-md-12 pl-1">
                                    <label>Content</label>
                                    <div class="form-group">
                                        <div class="col-md-10">
                                            <textarea name="content" id="content">@if (Model != null)
                                                {
                                                    <text>@Model.Content</text>
                                                }</textarea>
                                            <script language="javascript">
                                                CKEDITOR.replace("content");
                                            </script>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row" style="margin-top:5px;">
                                <div class="col-md-10">
                                    <input type="submit" value="Save" class="btn btn-primary">
                                </div>
                            </div>

                        </form>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card card-user">
                    <div class="card-image">
                        <img src="https://ununsplash.imgix.net/photo-1431578500526-4d9613015464?fit=crop&fm=jpg&h=300&q=75&w=400" style="height:300px;width:364.6px;box-sizing:border-box;padding:10px;" alt="...">
                    </div>
                    <div class="card-body">
                        <div class="author">
                            <a href="#">
                                <img class="avatar border-gray" src="~/assets/img/faces/face-2.jpg" alt="...">
                                <h5 class="title">Name</h5>
                            </a>
                            <p class="description">Email</p>
                        </div>
                    </div>
                    <hr>
                    <div class="button-container mr-auto ml-auto">
                        <button href="#" class="btn btn-simple btn-link btn-icon">
                            <i class="fa fa-facebook-square"></i>
                        </button>
                        <button href="#" class="btn btn-simple btn-link btn-icon">
                            <i class="fa fa-twitter"></i>
                        </button>
                        <button href="#" class="btn btn-simple btn-link btn-icon">
                            <i class="fa fa-google-plus-square"></i>
                        </button>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>