@{
	//Load file Layout.cshtml
	Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";

}
@using project.Models
@functions {
	public MyDbContext db = new MyDbContext();
}



							<div class="content">
								<div class="container-fluid">
									<div class="row">
										<div class="col-md-8">
											<div class="card" style="padding:20px;">
												<div class="card-header">
													<h4 class="card-title">Slides Control</h4>
												</div>
												<div class="card-body">
												<form method="post" enctype="multipart/form-data" action="@ViewBag.action">
														<div class="row">
															<div class="col-md-3 px-1">
																<div class="form-group">
																	<label>Name</label>
																	<input type="text" value="@if(Model != null){
																	<text>@Model.Name</text>}" name="name" class="form-control" required>
																</div>
															</div>

															<div class="col-md-4 pl-1">
																<div class="form-group">
																	<label for="exampleInputEmail1">Title</label>
																	<input type="text" value="@if (Model != null) {
																	<text>@Model.Title</text>}" name="Title" class="form-control" required>
																	
																</div>
															</div>
														</div>

														<div class="row">
															<div class="col-md-12">
																<div class="form-group">
																	<label>Subtitle</label>
																	<input type="text" value="@if (Model != null) {
																	<text>@Model.SubTitle</text>}" name="SubTitle" class="form-control" required>
																</div>
															</div>
														</div>

														<div class="row">
															<div class="col-md-12">
																<div class="form-group">
																	<label>Infor</label>
																	<input type="text" value="@if (Model != null) {
																	<text>@Model.Info</text>}" name="Info" class="form-control" required>
																</div>
															</div>
														</div>

														<div class="row">
															<div class="col-md-12">
																<div class="form-group">
																	<label>Link</label>
																	<input type="url" value="@if (Model != null) {
																	<text>@Model.Link</text>}" name="Link" class="form-control" required>
																</div>
															</div>
														</div>

														<div class="row">
															<div class="col-md-12">
																<div class="form-group">
																	<label>Photo</label>
																	<input type="file" name="Photo" />
																</div>
															</div>
														</div>

														<div class="row">
															<div class="col-md-10">
																<input type="submit" value="Save" class="btn btn-primary">
															</div>
														</div>

													</form>
												</div>
											</div>
										</div>

										<div class="col-md-4">
											<div class="card card-user">
												<div class="card-image">
													<img src="https://ununsplash.imgix.net/photo-1431578500526-4d9613015464?fit=crop&fm=jpg&h=300&q=75&w=400" style="height:300px;width:364.6px;box-sizing:border-box;padding:10px;" alt="...">
												</div>
												<div class="card-body">
													<div class="author">
														<a href="#">
															<img class="avatar border-gray" src="~/assets/img/faces/face-2.jpg" alt="...">
															<h5 class="title">Name</h5>
														</a>
														<p class="description">Email</p>
													</div>
												</div>
												<hr>
												<div class="button-container mr-auto ml-auto">
													<button href="#" class="btn btn-simple btn-link btn-icon">
														<i class="fa fa-facebook-square"></i>
													</button>
													<button href="#" class="btn btn-simple btn-link btn-icon">
														<i class="fa fa-twitter"></i>
													</button>
													<button href="#" class="btn btn-simple btn-link btn-icon">
														<i class="fa fa-google-plus-square"></i>
													</button>
												</div>
											</div>
										</div>

									</div>
								</div>
							</div>